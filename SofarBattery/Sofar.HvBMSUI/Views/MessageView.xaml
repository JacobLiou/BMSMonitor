<Window x:Class="Sofar.BMSUI.Views.MessageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sofar.BMSUI.Views"
        mc:Ignorable="d"
        Title="MessageView" Height="300" Width="550" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="30"
            CornerRadius="0"
            GlassFrameThickness="2" />
    </WindowChrome.WindowChrome>
    <Window.Resources />
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="18" Margin="20 5 0 0" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window},Mode=FindAncestor},Path=Title}"></TextBlock>
        <Grid Grid.Row="1"
            Margin="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="icon"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="/PowerKit.UI;component/Resources/Fonts/#iconfont"
                FontSize="24"
                Foreground="White" />

            <TextBlock
                x:Name="Content"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                TextWrapping="Wrap" />
        </Grid>
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="Confirm"
                Width="100"
                Height="30"
                Margin="5,0"
                Click="Confirm_Click"
                Content="{DynamicResource Sure}"
                IsDefault="True" />
            <Button
                x:Name="Cannel"
                Width="100"
                Height="30"
                Margin="5,0"
                Click="Cannel_Click"
                Content="{DynamicResource Cancel}"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
